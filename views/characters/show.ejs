<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Character</h1>
    <div class="col-6 offset-3">
        <table class="table table-primary table-striped table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Name</th>
                    <td><%= character.name %></td>
                </tr>
                <tr>
                    <th scope="row">Race</th>
                    <td><%= character.race %></td>
                </tr>
                <tr>
                    <th scope="row">Class</th>
                    <td><%= character.class %></td>
                </tr>
                <tr>
                    <th scope="row">Alignment</th>
                    <td><%= character.alignment %></td>
                </tr>
                <tr>
                    <th scope="row">Equipment</th>
                    <td><%= character.equipments[0] %></td>
                </tr>
            </tbody>
        </table>
        <div class="text-center mb-1">
            <a class="btn btn-success" href="/characters/<%= character._id %>/edit">Edit</a>
            <form class="d-inline" action="/characters/<%= character._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <div class="text-center">
            <a class="btn btn-primary" href="/characters">Characters</a>
        </div>
    </div>
</div>