<% layout('layouts/boilerplate') %>

<h1>Characters</h1>
<div>
    <a class="btn btn-primary" href="/characters/new">Create a New Character</a>
</div>
<div class="row mt-3">
    <% for (let character of characters) { %>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p><%= character.name %></p>
                    <footer class="blockquote-footer">The <cite title="Class"><%= character.class %></cite>
                    </footer>
                </blockquote>
                <div class="text-end">
                    <a href="/characters/<%= character._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>